{
  "namespace": "gix",
  "themes": {
    "simple": {
      "extend": "basic",
      "omit": ["card.actions"]
    },
    "paralel": {
      "extend": "basic"
    },
    "shape": {
      "extend": "basic",
      "fields": {
        "settings": {
          "mode": {
            "label": "Tipo",
            "widget": "select",
            "options": ["normal", "invert"]
          }
        },
        "card": {
          "shape": {
            "label": "Forma de foto",
            "name": "shape",
            "widget": "select",
            "options": [
              { "label": "Cuadrado", "value": "square" },
              { "label": "Circulo", "value": "circle" },
              { "label": "Hexagono", "value": "hexagon" },
              { "label": "Escudo", "value": "shield" }
            ]
          },
          "button": {
            "label": "Texto de boton",
            "widget": "string",
            "required": false,
            "name": "button"
          },
          "link": {
            "label": "Link del boton",
            "widget": "string",
            "required": false,
            "name": "link"
          }
        }
      }
    },
    "izi-basic": {
      "extend": "basic"
    },
    "izi-normal": {
      "extend": "basic"
    },
    "material-basic": {
      "extend": "basic"
    }
  }
}
